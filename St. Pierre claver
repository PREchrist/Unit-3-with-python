### Splash screen

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pape"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:textColor="#252521"
        android:padding="8dp"
        android:text="@string/hey_buddy_listen_the_desire_to_reach_for_the_stars_is_ambitions_the_desire_to_reach_hearts_is_wise"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="17dp"
        android:paddingLeft="14dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textColor="#252521"
        android:text="@string/celui_qui_est_mon_professeur_pour_un_jour_est_mon_parent_pour_dix_ans"
        />

    <TextView
        android:layout_width="wrap_content"
